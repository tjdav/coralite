{
  "name": "coralite-monorepo",
  "private": true,
  "type": "module",
  "homepage": "https://coralite.io/",
  "repository": {
    "type": "git",
    "url": "git@codeberg.org/tjdavid/coralite.git"
  },
  "keywords": [
    "frontend",
    "ssg-tool",
    "dev-server",
    "build-tool",
    "coralite"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "eslint --cache --fix .",
    "lint": "eslint --cache .",
    "test-e2e": "pnpm --filter='./packages/coralite' run test-e2e",
    "build-html": "pnpm --filter='./packages/coralite' run html",
    "publish": "pnpm --filter='./packages/coralite' publish",
    "publish-scripts": "pnpm --filter='./packages/coralite-scripts' publish",
    "publish-create": "pnpm --filter='./packages/create-coralite' publish",
    "release": "coralite-release",
    "changelog": "coralite-changelog",
    "website-build": "pnpm --filter='./website' run build",
    "website-dev": "pnpm --filter='./website' run start"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^2.12.1",
    "@stylistic/eslint-plugin-plus": "^2.12.1",
    "@types/node": "^22.10.5",
    "lint-staged": "^16.1.6",
    "simple-git-hooks": "^2.13.1"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "packages/*/{src,types}/**/*.js": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "coralite-release": "link:packages/coralite-release"
  }
}

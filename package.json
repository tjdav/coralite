{
  "name": "coralite",
  "version": "0.11.0",
  "description": "HTML modules static site generator",
  "main": "./lib/coralite.js",
  "type": "module",
  "keywords": [
    "static-site-generator",
    "components",
    "templates",
    "coralite",
    "blog",
    "site-engine",
    "documentation-tool"
  ],
  "homepage": "https://coralite.io",
  "author": {
    "name": "Thomas David",
    "url": "https://thomasjackdavid.com"
  },
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/tjdavid/coralite.git"
  },
  "bugs": {
    "url": "https://codeberg.org/tjdavid/coralite/issues"
  },
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "commitmsg": "commitlint -e",
    "lint-format": "eslint --cache --fix .",
    "lint": "eslint --cache .",
    "test-e2e": "playwright test",
    "test-e2e-report": "playwright show-report",
    "test-e2e-ui": "playwright test --ui",
    "html": "coralite -t tests/fixtures/templates -p tests/fixtures/pages -o dist -i 'data-dev=true'",
    "server": "sirv dist --dev --port 3000"
  },
  "bin": {
    "coralite": "bin/coralite.js"
  },
  "imports": {
    "#lib": "./lib/index.js",
    "#types": "./types/index.js",
    "#plugins": "./plugins/index.js"
  },
  "exports": {
    ".": {
      "default": "./lib/coralite.js",
      "types": "./types/index.js"
    },
    "./utils": {
      "default": "./lib/index.js",
      "types": "./types/index.js"
    },
    "./plugins": {
      "default": "./plugins/index.js",
      "types": "./types/index.js"
    },
    "./types": {
      "default": "./types/index.js"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@playwright/test": "^1.50.0",
    "@stylistic/eslint-plugin-js": "^2.12.1",
    "@stylistic/eslint-plugin-plus": "^2.12.1",
    "@types/node": "^22.10.5",
    "highlight.js": "^11.11.1",
    "sirv-cli": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "dom-serializer": "^2.0.0",
    "htmlparser2": "^10.0.0",
    "kleur": "^4.1.5"
  }
}

{
  "name": "coralite-scripts",
  "version": "0.23.0",
  "description": "Configuration and scripts for Create Coralite.",
  "type": "module",
  "bin": {
    "coralite-scripts": "./bin/index.js"
  },
  "keywords": [
    "coralite",
    "static-site-generator",
    "ssg",
    "configuration",
    "scripts"
  ],
  "files": [
    "bin",
    "libs",
    "types",
    "dist"
  ],
  "scripts": {
    "build": "premove dist && pnpm build-types",
    "build-types": "tsc"
  },
  "homepage": "https://coralite.io/docs/create-scripts",
  "author": {
    "name": "Thomas David",
    "url": "https://thomasjackdavid.com"
  },
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/tjdavid/coralite.git",
    "directory": "packages/coralite-scripts"
  },
  "bugs": {
    "url": "https://codeberg.org/tjdavid/coralite/issues"
  },
  "imports": {
    "#lib": {
      "default": "./libs/index.js"
    }
  },
  "exports": {
    ".": {
      "types": "./dist/libs/index.d.ts",
      "default": "./libs/index.js"
    },
    "./types": {
      "default": "./types/index.js"
    }
  },
  "license": "AGPL-3.0-only",
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "coralite": "workspace:*",
    "express": "^5.1.0",
    "kleur": "^4.1.5",
    "local-access": "^1.1.0",
    "ora": "^9.1.0",
    "portfinder": "^1.0.38",
    "postcss": "^8.5.6",
    "sass": "^1.91.0"
  }
}

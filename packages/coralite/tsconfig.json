{
  "compilerOptions": {
    "checkJs": true,
    "rootDir": ".",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "module": "nodenext",
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "paths": {
      "#lib": ["./lib/index.js"],
      "#plugins": ["./plugins/index.js"]
    }
  },
  "include": ["lib/index.js"],
  "exclude": ["node_modules"]
}

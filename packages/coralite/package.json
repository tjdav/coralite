{
  "name": "coralite",
  "version": "0.23.0",
  "description": "HTML modules static site generator",
  "type": "module",
  "keywords": [
    "static-site-generator",
    "components",
    "templates",
    "coralite",
    "blog",
    "site-engine",
    "documentation-tool"
  ],
  "homepage": "https://coralite.dev",
  "author": {
    "name": "Thomas David",
    "url": "https://thomasjackdavid.com"
  },
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/tjdavid/coralite.git",
    "directory": "packages/coralite"
  },
  "bugs": {
    "url": "https://codeberg.org/tjdavid/coralite/issues"
  },
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "lint-format": "eslint --cache --fix .",
    "lint": "eslint --cache .",
    "test-unit": "node --test ./tests/unit/**/*.spec.js",
    "test-unit-watch": "node --test --watch ./tests/unit/**/*.spec.js",
    "test-unit-coverage": "node --experimental-test-coverage --test ./tests/unit/**/*.spec.js",
    "test-e2e": "pnpm build-html && playwright test",
    "test-e2e-report": "playwright show-report",
    "test-e2e-ui": "playwright test --ui",
    "server": "sirv .html --dev --port 3000",
    "build": "premove dist && pnpm build-lib && pnpm build-plugins && pnpm build-types",
    "build-lib": "esbuild ./lib/index.js --bundle --target=esnext --external:postcss --external:postcss-selector-parser --external:esbuild --external:commander --external:dom-serializer --external:dom-htmlparser2 --external:kleur --external:p-limit --external:serialize-javascript --format=esm --outdir=dist/lib --platform=node --sourcemap",
    "build-plugins": "esbuild ./plugins/*.js --format=esm --outdir=dist/plugins --platform=node",
    "build-types": "tsc",
    "build-html": "premove .html && node ./bin/coralite.js -t tests/fixtures/templates -p tests/fixtures/pages -o .html -i 'data-dev=true'"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "coralite": "bin/coralite.js"
  },
  "imports": {
    "#lib": "./lib/index.js",
    "#plugins": "./plugins/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "default": "./plugins/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./types/index.js"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@playwright/test": "^1.50.0",
    "premove": "^4.0.0",
    "sirv-cli": "^3.0.0"
  },
  "engines": {
    "node": ">20.19.0"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "dom-serializer": "^2.0.0",
    "esbuild": "^0.25.9",
    "htmlparser2": "^10.0.0",
    "kleur": "^4.1.5",
    "p-limit": "^7.2.0",
    "postcss": "^8.5.6",
    "postcss-selector-parser": "^7.1.1",
    "serialize-javascript": "^7.0.2"
  }
}

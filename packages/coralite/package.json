{
  "name": "coralite",
  "version": "0.18.1",
  "description": "HTML modules static site generator",
  "type": "module",
  "keywords": [
    "static-site-generator",
    "components",
    "templates",
    "coralite",
    "blog",
    "site-engine",
    "documentation-tool"
  ],
  "homepage": "https://coralite.io",
  "author": {
    "name": "Thomas David",
    "url": "https://thomasjackdavid.com"
  },
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/tjdavid/coralite.git",
    "directory": "packages/coralite"
  },
  "bugs": {
    "url": "https://codeberg.org/tjdavid/coralite/issues"
  },
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "lint-format": "eslint --cache --fix .",
    "lint": "eslint --cache .",
    "test-e2e": "playwright test",
    "test-e2e-report": "playwright show-report",
    "test-e2e-ui": "playwright test --ui",
    "server": "sirv dist --dev --port 3000",
    "build": "premove dist && pnpm build-lib && pnpm build-plugins && pnpm build-types",
    "build-lib": "esbuild ./lib/index.js --bundle --format=esm --outdir=dist/lib --platform=node",
    "build-plugins": "esbuild ./plugins/*.js --format=esm --outdir=dist/plugins --platform=node",
    "build-types": "tsc",
    "build-html": "node --experimental-vm-modules --experimental-import-meta-resolve ./bin/coralite.js -t tests/fixtures/templates -p tests/fixtures/pages -o dist -i 'data-dev=true'"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "coralite": "bin/coralite.js"
  },
  "imports": {
    "#lib": "./lib/index.js",
    "#plugins": "./plugins/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "default": "./plugins/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./types/index.js"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@playwright/test": "^1.50.0",
    "esbuild": "^0.25.9",
    "highlight.js": "^11.11.1",
    "premove": "^4.0.0",
    "sirv-cli": "^3.0.0"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "dom-serializer": "^2.0.0",
    "htmlparser2": "^10.0.0",
    "kleur": "^4.1.5"
  }
}
